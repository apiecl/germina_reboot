<div class="item-{{type}} item-portafolio-publicacion-large item-large" data-type="{{type}}">

	<a class="block-item-link" href="{{ post_link }}" title="{{ post_title }}">

		<div class="item-content-wrapper">

			<div>
				<div class="col-md-6 portafolio-info animated fadeInUp">
					<span class="type">{{ type_label }}</span>
					<h2>{{{post_title}}}</h2>
					{{#post_clientes}}
					
					{{> partials/info-clientes}}

					{{/post_clientes}}

					<div class="excerpt">
						{{{ post_excerpt }}}
					</div>
					
					{{#extra}}
						{{> partials/extra-metadata}}
					{{/extra}}
				</div>

				<div class="col-md-5 portafolio-image animated fadeInRight">
					<img class="portada" src="{{ post_thumbnail }}" alt="{{ post_title }}">
				</div>

			</div>


		</div>

	</a>

</div>
